<div class="row">
  <div class="col-auto">
    <h2>Welcome back, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-blog-form">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id="blog-title" name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Content:</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>


<h3>Your Blogs:</h3>
{{#each blogs as |blog| }}
<div class="row mb-4 blog">
  <div class="col-md-5">
    <h4>
      <a href="/blogs/{{blog.id}}">{{blog.title}}</a>
    </h4>
  <div class="col-md-7">
    <p>
      {{blog.content}}
    </p>
  </div>
  <div>
    <p>Posted on {{format_date blog.date_created}}</p>
  </div>
   <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
</div>
{{/each}}

<script src="./js/profile.js"></script>
